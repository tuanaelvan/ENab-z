<Window x:Class="ENabız.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:ENabız"
        Title="MainWindow" Height="450" Width="800" WindowState="Maximized">

    <Grid Margin="0,0,0,-6">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="159*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Arka Plan -->
        <Grid.Background>
            <ImageBrush ImageSource="/pink1.png" Stretch="Fill"/>
        </Grid.Background>

        <!-- Viewbox: İçeriği ekran boyutuna göre ortalar ve orantılı büyütür -->
        <Viewbox x:Name="LoginFormBox" Stretch="None" Margin="0,1,3,1" Grid.ColumnSpan="8" RenderTransformOrigin="0.5,0.5">
            <Viewbox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.013"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Viewbox.RenderTransform>

            <!-- Ana İçerik Grid -->
            <Grid Width="485" Height="274">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="74.96"/>
                    <RowDefinition Height="Auto" MinHeight="64"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- TC Kimlik TextBox -->
                <TextBox TextAlignment="Center" VerticalContentAlignment="Center" Grid.Row="0" Margin="35,24,35,10" 
                         helpers:TextBoxHelper.Placeholder="T.C. Kimlik Numarası Giriniz" />

                <!-- Şifre TextBox -->
                <TextBox TextAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1" Margin="35,0,35,0"
                         helpers:TextBoxHelper.Placeholder="Şifrenizi Giriniz" Height="44" VerticalAlignment="Center"/>

                <!-- Butonlar -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10" Width="370" >
                    <Button Content="Giriş Yap" Width="166" Height="54" Background="#FFEDCBE1" Margin="0,0,30,0" Click="Button_Click_1"/>
                    <Button Content="Kayıt Ol" Width="174" Height="54" Background="#FFEDCBE1" Click="Button_Click"/>
                </StackPanel>
            </Grid>
        </Viewbox>

        <!-- Frame: Sayfa yönlendirme için -->

    </Grid>
</Window>
