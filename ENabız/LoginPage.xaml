<Window x:Class="ENabız.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ENabız"
        mc:Ignorable="d"
        Title="LoginPage" WindowState="Maximized">

    <Grid>
        <!-- Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="/freepik__upload__51298.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Ana içerik -->
        <Viewbox Stretch="Uniform">
            <Grid Width="800" Height="450">
                <!-- Profil Resmi -->
                <Image Source="/profile-2398782_1280.png" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>

                <!-- İsim -->
                <TextBlock Text="TUANA ELVANOĞLU" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,140,0,0" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>

                <!-- Bilgi Etiketleri -->
                <UniformGrid Rows="1" Columns="4" Margin="150,180,150,0" VerticalAlignment="Top" Height="60">
                    <TextBlock Text="YAŞ&#xD;&#xA; 21" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="KİLO&#xD;&#xA;70 kg" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="BOY&#xD;&#xA;165 cm" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="KAN GRUBU&#xD;&#xA;0 Rh+" TextAlignment="Center" VerticalAlignment="Center"/>
                </UniformGrid>

                <!-- Güncelle Butonu -->
                <Button Content="Güncelle"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="Blue"
                        FontStyle="Italic"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,250,0,0"
                        Width="70"
                        Click="Button_Click"/>

                <!-- VKİ -->
                <TextBlock Text="VÜCUT KİTLE İNDEKSİ&#xD;&#xA;25.71"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Margin="0,280,0,0"
                           Width="124"
                           TextAlignment="Center"/>

                <!-- Hesapla Butonu -->
                <Button Content="Hesapla"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="Blue"
                        FontStyle="Italic"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,330,0,0"
                        Width="70"
                        Click="Button_Click"/>

                <!-- Aile Hekimi Bilgisi -->
                <TextBlock Text="AİLE HEKİMİ&#xD;&#xA;Dr. Abdul BAHAR&#xD;&#xA;Trabzon Ortahisar 102 Nolu Aile Hekimliği Birimi"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Margin="0,370,0,0"
                           Width="300"
                           TextAlignment="Center"/>

                <!-- Aile Hekimi Değiştir Butonu -->
                <Button Content="Aile Hekimi Değiştir"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="Blue"
                        FontStyle="Italic"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,10"
                        Width="150"
                        Height="30"
                        Click="Button_Click"/>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
