<Window x:Class="ENabız.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:helpers="clr-namespace:ENabız"
        xmlns:local="clr-namespace:ENabız"
        mc:Ignorable="d"
        Title="LoginPage"
        WindowState="Maximized">

    <!-- ─────────────────────────  STİL KAYNAKLARI  ───────────────────────── -->
    <Window.Resources>

        <!-- Yumuşak kenarlı TextBox -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background"      Value="White"/>
            <Setter Property="BorderBrush"     Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding"         Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Mouse-over animasyonlu buton -->
        <Style x:Key="AnimatedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFEDCBE1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                             Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                             To="1.05" Duration="0:0:0.20"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                             Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                             To="1.05" Duration="0:0:0.20"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                             Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                             To="1.0" Duration="0:0:0.20"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                             Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                             To="1.0" Duration="0:0:0.20"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hover efekti (logo gibi görseller için) -->
        <Style x:Key="HoverableImageStyle" TargetType="Image">
            <Setter Property="Opacity"               Value="0.15"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.30"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    <!-- ────────────────────────  /STİL KAYNAKLARI  ───────────────────────── -->

    <Grid>
        <!-- Arka plan resmi -->
        <Grid.Background>
            <ImageBrush ImageSource="/freepik__upload__51298.png"
                Stretch="UniformToFill"/>
        </Grid.Background>
        
        <!-- Grid satır ve sütun tanımlamaları -->
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <!-- Üst bar yüksekliği -->
            <RowDefinition Height="*"/>
            <!-- Geri kalan alan -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sol menü genişliği -->
            <ColumnDefinition Width="*"/>
            <!-- Ana içerik alanı -->
        </Grid.ColumnDefinitions>

        <!-- Üst bar (logo + anasayfa + arama) -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Top" Background="White" Height="100">

            <!-- Logo (hover’lı) -->
            <Image Source="/Pink_and_Red_Shapes_Community___Non-Profit_Logo-removebg-preview.png"
                   Width="100" Height="100"
                   Style="{StaticResource HoverableImageStyle}"
                   DockPanel.Dock="Left" Opacity="1"/>

            <!-- Anasayfa simgesi -->
            <Image Source="/anasayfa.png"
                   Width="50" Height="30"
                   Margin="10,0"
                   VerticalAlignment="Center"
                   DockPanel.Dock="Left"/>

            <!-- Arama kutusu + buton -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBox Width="300" Height="40"
                         TextAlignment="Left"
                         VerticalContentAlignment="Center"
                         helpers:TextBoxHelper.Placeholder="Bir şeyler ara..."
                         Style="{StaticResource RoundedTextBoxStyle}"
                         Name="SearchBox"/>
                <Button Content="🔍"
                         Width="50" Height="40" Margin="10,0,0,0"
                         Style="{StaticResource AnimatedButtonStyle}"/>

            </StackPanel>

        </DockPanel>

        <!-- Sol Menü -->
        <StackPanel Grid.Row="1" Grid.Column="0" Width="220" Background="#F8F9FA" Orientation="Vertical" HorizontalAlignment="Left">
            <ItemsControl>
                <ItemsControl.Resources>
                    <Style TargetType="StackPanel">
                        <Setter Property="Orientation" Value="Horizontal"/>
                        <Setter Property="Margin" Value="10"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                    <Style TargetType="Image">
                        <Setter Property="Width" Value="24"/>
                        <Setter Property="Height" Value="24"/>
                        <Setter Property="Margin" Value="5"/>
                    </Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="#007ACC"/>
                    </Style>
                </ItemsControl.Resources>
                <StackPanel>
                    <Image Source="/asistan.png">
                        <Image.OpacityMask>
                            <ImageBrush ImageSource="/asistan.png"/>
                        </Image.OpacityMask>
                    </Image>
                    <TextBlock Text="Akıllı Asistan"/>
                </StackPanel>
                <StackPanel>
                    <Image Source="/visit.png"/>
                    <TextBlock Text="Ziyaretlerim"/>
                </StackPanel>
                <StackPanel>
                    <Image Source="/recete.png">
                        <Image.OpacityMask>
                            <ImageBrush ImageSource="/recete.png"/>
                        </Image.OpacityMask>
                    </Image>
                    <TextBlock Text="Reçetelerim"/>
                </StackPanel>
                <StackPanel>
                    <Image Source="/rapor.png"/>
                    <TextBlock Text="Raporlarım"/>
                </StackPanel>
                <StackPanel>
                    <Image Source="/hasta.png"/>
                    <TextBlock Text="Hastalıklarım"/>
                </StackPanel>
                <StackPanel>
                    <Image Source="/tahlil.png"/>
                    <TextBlock Text="Tahlillerim"/>
                </StackPanel>
                <StackPanel>
                    <Image Source="/radyo.png"/>
                    <TextBlock Text="Radyolojik Görüntülerim"/>
                </StackPanel>
                <StackPanel>
                    <Image Source="/pato.png"/>
                    <TextBlock Text="Patoloji Bilgilerim"/>
                </StackPanel>
                <StackPanel>
                    <Image Source="/epik.png"/>
                    <TextBlock Text="Epikriz Bilgilerim"/>
                </StackPanel>
                <StackPanel>
                    <Image Source="/mal.png"/>
                    <TextBlock Text="Malzeme ve Cihazlarım"/>
                </StackPanel>
                <StackPanel>
                    <Image Source="/tarama.png"/>
                    <TextBlock Text="Tarama Verilerim"/>
                </StackPanel>
            </ItemsControl>
        </StackPanel>
        <!-- Ana içerik -->
        <Viewbox Grid.Row="1" Grid.Column="1" Stretch="Uniform">
            <Grid Width="800" Height="450">

                <!-- Profil resmi -->
                <Image Source="/profile-2398782_1280.png"
                       Width="100" Height="100"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,30,0,0"/>

                <!-- İsim -->
                <TextBlock Text="TUANA ELVANOĞLU"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Margin="0,140,0,0"
                           FontSize="16"
                           FontWeight="Bold"
                           TextAlignment="Center"/>

                <!-- Bilgi etiketleri -->
                <UniformGrid Rows="1" Columns="4"
                             Margin="150,180,150,0"
                             VerticalAlignment="Top"
                             Height="60">
                    <TextBlock Text="YAŞ&#x0a;21" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="KİLO&#x0a;70 kg" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="BOY&#x0a;165 cm" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="KAN GRUBU&#x0a;0 Rh+" TextAlignment="Center" VerticalAlignment="Center"/>
                </UniformGrid>

                <!-- Güncelle -->
                <Button Content="Güncelle" Background="Transparent" BorderBrush="Transparent"
                        Foreground="Blue" FontStyle="Italic"
                        HorizontalAlignment="Center" VerticalAlignment="Top"
                        Margin="0,250,0,0" Width="70"
                        Click="Button_Click"/>

                <!-- VKİ -->
                <TextBlock Text="VÜCUT KİTLE İNDEKSİ&#x0a;25.71"
                           HorizontalAlignment="Center" VerticalAlignment="Top"
                           Margin="0,280,0,0" Width="124" TextAlignment="Center"/>

                <!-- Hesapla -->
                <Button Content="Hesapla" Background="Transparent" BorderBrush="Transparent"
                        Foreground="Blue" FontStyle="Italic"
                        HorizontalAlignment="Center" VerticalAlignment="Top"
                        Margin="0,330,0,0" Width="70"
                        Click="Button_Click"/>

                <!-- Aile hekimi -->
                <TextBlock Text="AİLE HEKİMİ&#x0a;Dr. Abdul BAHAR&#x0a;Trabzon Ortahisar 102 Nolu Aile Hekimliği Birimi"
                           HorizontalAlignment="Center" VerticalAlignment="Top"
                           Margin="0,370,0,0" Width="300" TextAlignment="Center"/>

                <!-- Aile hekimi değiştir -->
                <Button Content="Aile Hekimi Değiştir" Background="Transparent" BorderBrush="Transparent"
                        Foreground="Blue" FontStyle="Italic"
                        HorizontalAlignment="Center" VerticalAlignment="Bottom"
                        Margin="0,0,0,10" Width="150" Height="30"
                        Click="Button_Click"/>
            </Grid>
        </Viewbox>

    </Grid>
</Window>
